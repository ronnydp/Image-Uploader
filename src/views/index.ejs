<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Image Uploader</title>
    <%- include(`partials/head`) %>
  </head>
  <body>
    <%- include(`partials/navigation`) %>
    <div class="container">
      <div class="card">
        <form action="" class="">
          <input class="input-file" type="file" hidden />
          <div class="drop-area">
            <img src="/img/exit.svg" />
            <p class="inner">Drag & drop a file or <span class="select">browse files</span></p>
            <p class="file-types">JPG, PNG or GIF - Max file size 2MB</p>
          </div>
        </form>
      </div>
    </div>

    <script src="/js/darkMode.js"></script>
    <script src="/js/dropFile.js"></script>
  </body>
</html>
