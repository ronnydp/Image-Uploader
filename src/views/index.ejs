<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Image Uploader</title>
    <%- include(`partials/head`) %>
  </head>
  <body>
    <%- include(`partials/navigation`) %>
    <div class="container">
      <div class="drag-container">
        <div id="dropArea" class="drag-area">
          <img src="/img/exit.svg" />
          <a class="drag-text">Drag & drop a file or <span class="link-browse">browse files</span></a>
          <input type="file" id="input-file" hidden multiple>
          <a class="img-text">JPG, PNG or GIF - Max file size 2MB</a>
        </div>
      </div>
    </div>
    <script src="/js/darkMode.js"></script>
    <script src="/js/dropDrag.js"></script>
  </body>
</html>
